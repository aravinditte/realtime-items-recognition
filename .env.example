# Real-Time Object Detection Environment Configuration
# Copy this file to .env and update the values as needed

# Flask Application Settings
FLASK_ENV=production
HOST=0.0.0.0
PORT=5000
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# AI Model Configuration
# Available models: yolov8n.pt, yolov8s.pt, yolov8m.pt, yolov8l.pt, yolov8x.pt
# Smaller models (n, s) are faster but less accurate
# Larger models (l, x) are more accurate but slower
MODEL_NAME=yolov8n.pt

# Detection Thresholds
# Confidence threshold: objects with confidence below this value will be filtered out (0.1 - 0.9)
CONFIDENCE_THRESHOLD=0.30
# IoU threshold: used for non-maximum suppression to remove overlapping detections (0.1 - 0.9)
IOU_THRESHOLD=0.45

# Performance Settings
# Input resolution for inference (lower = faster, higher = more accurate)
INFER_WIDTH=640
INFER_HEIGHT=384

# WebSocket frame queue size (lower = less memory, higher = smoother streaming)
FRAME_QUEUE_MAX=3

# File Upload Settings
# Maximum file size in bytes (50MB = 52428800)
MAX_CONTENT_LENGTH=52428800

# Docker Settings (for containerized deployment)
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password

# Development Settings
DEBUG=False
TEST_MODE=False

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Performance Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# CORS Settings (for cross-origin requests)
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
MAX_CONNECTIONS=10

# GPU Settings (if available)
USE_GPU=True
GPU_MEMORY_LIMIT=2048  # MB

# Cache Settings
MODEL_CACHE_DIR=/tmp/yolo_models
ENABLE_MODEL_CACHE=True

# Security Settings
ENABLE_HTTPS=False
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30
ENABLE_HEALTH_ENDPOINT=True

# Database Settings (optional, for storing statistics)
DATABASE_URL=sqlite:///stats.db
ENABLE_STATISTICS_DB=False

# Cloud Storage (optional, for saving processed videos/images)
S3_BUCKET_NAME=your-s3-bucket
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
ENABLE_CLOUD_STORAGE=False

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ENABLE_EMAIL_NOTIFICATIONS=False
NOTIFICATION_EMAIL=admin@example.com

# Webhook Notifications (optional)
WEBHOOK_URL=https://your-webhook-url.com/notifications
ENABLE_WEBHOOK_NOTIFICATIONS=False

# Custom Model Settings (advanced)
CUSTOM_MODEL_PATH=/path/to/custom/model.pt
USE_CUSTOM_MODEL=False
CUSTOM_CLASS_NAMES=person,car,bicycle,dog,cat

# API Keys (for external services)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key

# Feature Flags
ENABLE_FACE_DETECTION=False
ENABLE_VEHICLE_COUNTING=False
ENABLE_PERSON_TRACKING=True
ENABLE_OBJECT_CLASSIFICATION=True

# Deployment Settings
DEPLOYMENT_ENVIRONMENT=production
CLOUD_PROVIDER=aws
REGION=us-east-1

# Backup Settings
ENABLE_BACKUPS=True
BACKUP_INTERVAL=24  # hours
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=your-backup-bucket
